@page "/directions"
@using BlazorFastMarquee

<PageTitle>Directions - BlazorFastMarquee Demo</PageTitle>

<h1>üß≠ Direction Control</h1>
<p class="page-subtitle">Scroll content in any direction - left, right, up, or down</p>

<section class="demo-section">
    <h2>Left (Default)</h2>
    <p>Content scrolls from right to left</p>
    
    <div class="demo-container">
        <Marquee Direction="MarqueeDirection.Left" Speed="50" Gradient="true">
            <div class="direction-content">
                <span class="direction-item">‚Üí Scrolling Left</span>
                <span class="direction-item">‚Üí Right to Left</span>
                <span class="direction-item">‚Üí Classic Marquee</span>
            </div>
        </Marquee>
    </div>
    
    <div class="code-block">
        <pre><code>&lt;Marquee Direction="MarqueeDirection.Left" Speed="50"&gt;
    &lt;!-- Content scrolls ‚Üí --&gt;
&lt;/Marquee&gt;</code></pre>
    </div>
</section>

<section class="demo-section">
    <h2>Right</h2>
    <p>Content scrolls from left to right</p>
    
    <div class="demo-container">
        <Marquee Direction="MarqueeDirection.Right" Speed="50" Gradient="true">
            <div class="direction-content">
                <span class="direction-item direction-right">‚Üê Scrolling Right</span>
                <span class="direction-item direction-right">‚Üê Left to Right</span>
                <span class="direction-item direction-right">‚Üê Reverse Direction</span>
            </div>
        </Marquee>
    </div>
    
    <div class="code-block">
        <pre><code>&lt;Marquee Direction="MarqueeDirection.Right" Speed="50"&gt;
    &lt;!-- Content scrolls ‚Üê --&gt;
&lt;/Marquee&gt;</code></pre>
    </div>
</section>

<section class="demo-section">
    <h2>Up</h2>
    <p>Content scrolls from bottom to top (vertical)</p>
    
    <div class="demo-container vertical">
        <Marquee Direction="MarqueeDirection.Up" Speed="30" Gradient="true" GradientColor="#f9fafb">
            <div class="vertical-content">
                <div class="vertical-item">‚Üë Scrolling Up</div>
                <div class="vertical-item">‚Üë Bottom to Top</div>
                <div class="vertical-item">‚Üë Vertical Motion</div>
                <div class="vertical-item">‚Üë News Ticker Style</div>
            </div>
        </Marquee>
    </div>
    
    <div class="code-block">
        <pre><code>&lt;Marquee Direction="MarqueeDirection.Up" Speed="30"&gt;
    &lt;!-- Content scrolls ‚Üë --&gt;
&lt;/Marquee&gt;</code></pre>
    </div>
</section>

<section class="demo-section">
    <h2>Down</h2>
    <p>Content scrolls from top to bottom (vertical)</p>
    
    <div class="demo-container vertical">
        <Marquee Direction="MarqueeDirection.Down" Speed="30" Gradient="true" GradientColor="#f9fafb">
            <div class="vertical-content">
                <div class="vertical-item vertical-down">‚Üì Scrolling Down</div>
                <div class="vertical-item vertical-down">‚Üì Top to Bottom</div>
                <div class="vertical-item vertical-down">‚Üì Reverse Vertical</div>
                <div class="vertical-item vertical-down">‚Üì Waterfall Effect</div>
            </div>
        </Marquee>
    </div>
    
    <div class="code-block">
        <pre><code>&lt;Marquee Direction="MarqueeDirection.Down" Speed="30"&gt;
    &lt;!-- Content scrolls ‚Üì --&gt;
&lt;/Marquee&gt;</code></pre>
    </div>
</section>

<section class="info-box">
