<style>
    /* Vertical Gallery Container - mimics gallery page */
    .vertical-gallery-container {
        background: white;
        border-radius: 1rem;
        height: 500px;
        overflow: hidden;
        padding: 2rem;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    
    .vertical-gallery-container.compact {
        height: 350px;
        padding: 1.5rem;
    }
    
    .vertical-gallery {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }
    
    /* Drag Cards */
    .drag-card {
        width: 280px;
        height: 180px;
        border-radius: 0.75rem;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        cursor: grab;
        transition: transform 0.2s;
    }
    
    .drag-card:active {
        cursor: grabbing;
    }
    
    .drag-card:hover {
        transform: scale(1.02);
    }
    
    .drag-content {
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        color: white;
        gap: 0.5rem;
    }
    
    .drag-icon {
        font-size: 3rem;
    }
    
    .drag-title {
