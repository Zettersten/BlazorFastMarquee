    }
    
    /* Compact Cards */
    .drag-card-compact {
        width: 220px;
        height: 140px;
        border-radius: 0.75rem;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        cursor: grab;
    }
    
    .drag-card-compact:active {
        cursor: grabbing;
    }
    
    .drag-content-compact {
